 @model IEnumerable<SalesWebMvc.Models.Vendedor>
 
@{
    ViewData["Title"] = "Vendedor";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Criar" class="btn btn-default">Criar novo</a>
</p>


<table class= "table table-striped table-hover">
    <thead>
        <tr class ="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.BaseSalario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalario)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>



